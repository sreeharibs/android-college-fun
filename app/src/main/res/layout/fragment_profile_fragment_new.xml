<ScrollView
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vkcet.vkcet.Profile_fragment_new"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:clickable="true"
        android:background="@drawable/ic_arrow_back_white_36dp"/>

    <include
        android:id="@+id/Profile"
        layout="@layout/profile"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/Profile_academic"
        layout="@layout/profile_academic"/>

    <include
        android:id="@+id/Profile_professional"
        layout="@layout/profile_profession"/>
</LinearLayout>

</LinearLayout>

</ScrollView>