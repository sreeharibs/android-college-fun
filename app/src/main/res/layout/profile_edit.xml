<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:paddingBottom="10dp"
        android:elevation="2dp"
        android:background="@drawable/profile_background"
        android:orientation="vertical">

        <Space
            android:layout_width="10dp"
            android:layout_height="70dp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:ems="10"
                android:hint="Name"
                android:id="@+id/etName" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:hint="Email"
                android:id="@+id/etEmail" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:inputType="text|phone"
                android:ems="10"
                android:hint="Phone"
                android:id="@+id/etPhone" />
        </android.support.design.widget.TextInputLayout>

        <Space
            android:id="@+id/spaceHolder"
            android:layout_width="10dp"
            android:layout_height="0dp"
            android:layout_below="@id/tvEducation"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btnUpdatePersonal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/spaceHolder"
            android:layout_toEndOf="@id/spaceHolder"
            android:layout_below="@id/tvAddress"
            android:layout_marginBottom="16dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/connect_button"
            android:textColor="@android:color/white"
            android:text="update"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="right"
            android:layout_marginRight="10dp" />

    </LinearLayout>

    <include
        android:id="@+id/photoHeader"
        layout="@layout/photo_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/relativeLayout"
        app:layout_anchorGravity="top|center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    </RelativeLayout>

        <include
            layout="@layout/profile_academic_edit">

        </include>


    <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tvEducation"
        android:paddingBottom="10dp"
        android:elevation="2dp"
        android:background="@drawable/profile_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAcademic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="5dp"
            android:text="Professional"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif"/>
        <!--<Space
            android:layout_width="10dp"
            android:layout_height="30dp" />-->

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:ems="10"
                android:hint="Job Title"
                android:id="@+id/etJobTitle" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:inputType="text"
                android:ems="10"
                android:hint="Company"
                android:id="@+id/etCompany" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:inputType="text"
                android:ems="10"
                android:hint="Industry"
                android:id="@+id/etIndustry" />
        </android.support.design.widget.TextInputLayout>

        <Space
            android:id="@+id/spaceHolder1"
            android:layout_width="10dp"
            android:layout_height="0dp"
            android:layout_below="@id/tvEducation"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btnUpdateProfession"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/spaceHolder"
            android:layout_toEndOf="@id/spaceHolder"
            android:layout_below="@id/tvAddress"
            android:layout_marginBottom="16dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/connect_button"
            android:textColor="@android:color/white"
            android:text="update"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="right"
            android:layout_marginRight="10dp" />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tvEducation"
            android:paddingBottom="10dp"
            android:elevation="2dp"
            android:background="@drawable/profile_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMiscellaneous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:text="Miscellaneous"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif"/>
            <!--<Space
                android:layout_width="10dp"
                android:layout_height="30dp" />-->

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:inputType="textWebPassword"
                    android:ems="10"
                    android:hint="Password"
                    android:id="@+id/etPassword" />
            </android.support.design.widget.TextInputLayout>

            <!--<android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">-->

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="16dp"
                    android:entries="@array/privacy"
                    android:prompt="@string/privacy_prompt"
                    android:id="@+id/spPrivacy" />
            <!--</android.support.design.widget.TextInputLayout>-->


            <Space
                android:id="@+id/spaceHolder1"
                android:layout_width="10dp"
                android:layout_height="0dp"
                android:layout_below="@id/tvEducation"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/btnUpdatePrivacy"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/spaceHolder"
                android:layout_toEndOf="@id/spaceHolder"
                android:layout_below="@id/tvAddress"
                android:layout_marginBottom="16dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/connect_button"
                android:textColor="@android:color/white"
                android:text="update"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="right"
                android:layout_marginRight="10dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>